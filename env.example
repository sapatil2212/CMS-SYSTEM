# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/database_name?connection_limit=5&pool_timeout=2"

# JWT Secret
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-change-this-in-production"

# Email Configuration
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_USERNAME="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"

# File Upload Configuration
UPLOAD_DIR="public/uploads"
MAX_FILE_SIZE="5242880" # 5MB

# File Uploads
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Next.js Public Cloudinary Configuration (required for client-side access)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# Production Database URL (replace with your actual Railway/Production database URL)
# DATABASE_URL=mysql://username:password@host:port/database_name